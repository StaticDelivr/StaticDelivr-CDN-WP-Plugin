<?xml version="1.0"?>
<ruleset name="StaticDelivr WordPress Coding Standards">
    <description>WordPress Coding Standards for StaticDelivr plugin</description>

    <!-- Use the built-in WordPress standard -->
    <rule ref="WordPress"/>

    <!-- Include main plugin directories -->
    <file>includes</file>
    <file>staticdelivr.php</file>
    
    <!-- Exclude translation files -->
    <exclude-pattern>*/languages/*</exclude-pattern>
</ruleset>
